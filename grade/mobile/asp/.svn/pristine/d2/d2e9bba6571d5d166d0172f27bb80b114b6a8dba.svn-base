<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>选择充值方式</title>
    <link rel="stylesheet" type="text/css" href="./../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="./../../frozenui-1.3.0/css/frozen.css"/>
    <link rel="stylesheet" type="text/css" href="./../../css/style.css"/>
    <style type="text/css">
    .content {
        margin: 10px 10px 0 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    .content .wyt-title {
        text-align: center;
        padding: 10px 0;
        border-radius: 5px 5px 0 0;
    }
    .content ul {
        border-radius: 0 0 5px 5px;
    }
    .content li .ui-checkbox {
        vertical-align: top;
        line-height: 45px;
    }
    .content li span {
        display: inline-block;
        font-size: 30px;
        margin-right: 10px;
    }
    </style>
</head>
<body>
    <header class="ui-border-b">
         <span class="ui-icon-return"></span>
         <h1>选择充值方式</h1>
    </header>
    <section class="wyt-block">
        <div class="content">
            <div class="wyt-title">银行卡支付</div>
            <ul class="ui-list ui-list-text ui-list-checkbox">
                <li class="ui-flex ui-flex-align-start ui-border-t">
                    <label class="ui-checkbox">
                        <input type="checkbox">
                    </label>
                    <span>CCB</span>
                    <div>
                        <h4>中国建设银行</h4>
                        <p class="wyt-info">使用中国建设银行借记卡</p>
                    </div>
                </li>
                <li class="ui-flex ui-flex-align-start ui-border-t">
                    <label class="ui-checkbox">
                        <input type="checkbox">
                    </label>
                    <span>CCB</span>
                    <div>
                        <h4>中国建设银行</h4>
                        <p class="wyt-info">使用中国建设银行借记卡</p>
                    </div>
                </li>
            </ul>
        </div>
        <div class="ui-btn-wrap">
            <button id="next" class="ui-btn-lg ui-btn-primary">下一步</button>
        </div>
    </section>
</body>
    <script type="text/javascript" src="./../../script/api.js"></script>
    <script type="text/javascript" src="./../../frozenui-1.3.0/lib/zepto.min.js"></script>
    <script type="text/javascript" src="./../../script/comment.js"></script>
    <script type="text/javascript">
        apiready = function(){
            var oNext = $api.byId('next');
            var oReturn = $api.dom('.ui-icon-return');
            $api.addEvt(oReturn, 'click', function () {
                close();
            });
            $api.addEvt(oNext, 'click', function () {
                api.openWin({
                    name: 'payaddsuccess',
                    url: './payaddsuccess.html',
                    bounces: false,
                    pageParam: {key : 'value'}
                });
            });
            function close () {
                api.closeWin({
                    name: 'paychoose'
                });
            }

        }
    </script>
</html>