<script type="text/javascript">
apiready = function(){
    var oLogin = $api.byId('login');
    var oIndex = 0;

    $api.addEvt(oLogin, 'click', function () {
        InitGroupLogin();
    });
    
    function InitGroupLogin(){
        var frames = [];
        var arr1 = ["login","reg","find","reset"];
        var arr2 = ["用户登录","用户注册","找回密码","重置密码"];
        api.openFrameGroup ({
            name: 'groupLogin',
            scrollEnabled: true,
            rect: {
                x: 0,
                y: 0,
                w: api.winWidth,
                h: api.winHeight
            },
            index: oIndex,
            frames:
            [{
                name: 'login', 
                url: './login.html', 
                pageParam:{
                    head:'用户登录'
                }, 
                bounces:false, 
            },{
                name: 'reg', 
                url: './reg.html', 
                pageParam:{
                    head:'用户注册'
                }, 
                bounces:false, 
            },{
                name: 'find', 
                url: './find.html', 
                pageParam:{
                    head:'找回密码'
                }, 
                bounces:false, 
            },{
                name: 'reset', 
                url: './reset.html', 
                pageParam:{
                    head:'重置密码'
                }, 
                bounces:false, 
            }]
        }, function(ret, err){
            changeFrame(oIndex);
        });
    }

    function changeFrame(oIndex) {
        api.setFrameGroupIndex({
            name: 'groupLogin',
            index: oIndex
        });
    }
}


