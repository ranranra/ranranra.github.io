<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>登录</title>
    <link rel="stylesheet" type="text/css" href="../frozenui-1.3.0/css/frozen.css">
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
        .ui-container .ui-form {
        	margin-top: 20px;
        	margin-bottom: 10px;
        }
        .ui-btn-wrap .ui-txt-info {
        	text-align: right;
        	margin-bottom: 10px;
        }
        .ui-container .wyt-desc {
            padding-bottom: 0;
        }
        .ui-container .ui-txt-info {
            font-size: 12px;
        }

    </style>

</head>
<body>
	<header class="ui-border-b">
		<h1 id="head-name">用户登录</h1>
		<i id="close" class="ui-icon-close-page"></i>
	</header>
	<section id="main" class="ui-container">
		<div class="wyt-desc">
			<p class="ui-txt-default">欢迎您使用物亿通</p>
			<p class="ui-txt-info">一站式物流货款解决方案,方便,快捷,安全</p>
		</div>
		<div class="ui-form ui-border-t">
		    <form action="#">
			    <div class="ui-form-item ui-border-b">
			        <label>手机号</label>
			        <input type="text" placeholder="手机号">
			        <a href="javascript:;" class="ui-icon-close">
			        </a>
			    </div>
			    <div class="ui-form-item ui-border-b">
			        <label>密码</label>
			        <input type="text" placeholder="密码">
			        <a href="javascript:;" class="ui-icon-close">
			        </a>
			    </div>
		    </form>
		</div>
		<div class="ui-btn-wrap">
		    <button id="login1" class="ui-btn-lg ui-btn-primary">登录</button>
		    <p class="ui-txt-info"><a id="forget" href="javascript:;">忘记密码?</a></p>
		    <button id="reg" class="ui-btn-lg">注册新用户</button>
		</div>
	</section>
</body>
<script src="../script/api.js"></script>
<script type="text/javascript" src="../script/comment.js"></script>
<script type="text/javascript">
	apiready = function(){
	    var oLogin = $api.byId('login1');
	    var oReg = $api.byId('reg');
	    var oForget = $api.byId('forget');
	    var oClose = $api.byId('close');
        var oInputClose = $api.domAll('.ui-icon-close');
	   	var oIndex = 1;	//0是登录，1是注册，2是找回，3是重置
	   	var arr1 = ["login","reg","find","reset"];
	   	var arr2 = ["用户登录","用户注册","找回密码","重置密码"];

        $api.fixStatusBar( $api.dom('header') );

	   	$api.addEvt(oReg, 'click', function () {
	   		indexOpenCommon(arr1[1],arr2[1]);
	   	});

	   	$api.addEvt(oLogin, 'click', function () {
	   		api.closeWin({
	   		    name: 'login'
	   		});
	   	});

	   	$api.addEvt(oClose, 'click', function () {
	   		api.closeWin({
	   		    name: 'login'
	   		});
	   	});

	   	$api.addEvt(oForget, 'click', function () {
	   		indexOpenCommon(arr1[2],arr2[2]);
	   	});

        for(var i=0; i<oInputClose.length; i++) {
            resetInput(oInputClose[i]);
        }
	}
	    
</script>
</html>