    <style type="text/css">
    .ui-list>li {
        margin-left: 10px;
    }
    .ui-list {
        background: #f5f5f5;
    }
    .top {
        background: #f5f5f5;
    }
    .wyt-tab {
        width: 70%;
        margin: 10px;
        border: 1px solid #cacccd;
        border-radius: 3px;
        text-align: center;
        background: #fff;
        padding: 2px 0;
    }
    .wyt-evalue {
       border: 1px solid #ddd;
       margin: 10px;
       background: #fff;
       position: relative;
       padding-bottom: 30px;
    }
    .wyt-evalue .info {
        font-size: 12px;
    }
    .content .user{
        font-size: 14px;
    }
    .content .user strong {
        font-weight: normal;
    }
    .content .star {
        float: right;
        margin-top: 5px;
    }
    .content .star li{
        float: right;
        height: 12px;
        width: 12px;
        border-radius: 50%;
        background: orange;
        margin-right: 5px;
    }
    .content p {
        font-size: 12px;
        color: #000;
    }
    .content p.info {
        color: #777;
    }
    .content time {
        font-size: 12px;
    }
    .control {
        position: absolute;
        bottom: 0;
        left: 0;
        height: 30px;
        width: 90%;
        padding: 0 10px;
    }
    .control p {
        float:left;
    }
    .control ul {
        float: right;
    }
    .control ul li {
        float: right;
    }
    </style>
</head>
