<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>个人资料</title>
    <link rel="stylesheet" type="text/css" href="./../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="./../../css/style.css"/>
    <link rel="stylesheet" type="text/css" href="./../../frozenui-1.3.0/css/frozen.css"/>
    <style>
        .ui-icon-return {
            position: absolute;
            left: 10px;
            bottom: 3px;
            color: #fff;
        }
        .top {
            padding: 20px 0;
        }
        .top .ui-btn-wrap {
            margin-top: 10px;
        }
        .ui-form-item {
            padding-left: 15px;
        }

    </style>
</head>
<body>
	<header class="ui-border-b">
        <span class="ui-icon-return"></span>
        <h1>个人资料</h1>
    </header>
    <section>
        <div class="ui-container ui-center top">
            <div class="ui-flex ui-flex-pack-center">
                <div class="ui-avatar-one"><span ></span></div>
            </div>
            <div class="ui-btn-wrap">
                <button id="change" class="ui-btn ui-btn-primary">更换头像</button>
            </div>
        </div>

        <div class="wyt-block">
            <div class="ui-border-b wyt-title">
                <h5>我的资料</h5>
            </div>
            <form>
                <div class="ui-form-item ui-border-b">
                    <label>我的昵称</label>
                    <input type="text" placeholder="我的昵称">
                    <a href="javascript:;" class="ui-icon-close">
                    </a>
                </div>
                <div class="ui-form-item ui-border-b">
                    <label>真实姓名</label>
                    <input type="text" placeholder="真实姓名">
                    <a href="javascript:;" class="ui-icon-close">
                    </a>
                </div>
                <div class="ui-form-item ui-border-b">
                    <label>手机号</label>
                    <input type="tel" placeholder="手机号">
                    <a href="javascript:;" class="ui-icon-close">
                    </a>
                </div>
                <div class="ui-form-item ui-border-b">
                    <label>邮箱</label>
                    <input type="email" placeholder="邮箱">
                    <a href="javascript:;" class="ui-icon-close">
                    </a>
                </div>
            </form>
        </div>

        <div class="ui-btn-wrap">
            <button id="save" class="ui-btn-lg ui-btn-primary">保存</button>
        </div>
    </section>
</body>
<script type="text/javascript" src="./../../script/api.js"></script>
<script type="text/javascript" src="./../../frozenui-1.3.0/lib/zepto.min.js"></script>
<script type="text/javascript" src="./../../script/comment.js"></script>
<script>
    apiready = function(){
        var oSave = $api.byId('save');
        var oChange = $api.byId('change');
        var oInputClose = $api.domAll('.ui-icon-close');
        var oReturn = $api.dom('.ui-icon-return');
        $api.addEvt(oReturn, 'click', function () {
            close();
        });
        $api.addEvt(oSave, 'click', function () {
            close();
        });

        for(var i=0; i<oInputClose.length; i++) {
            resetInput(oInputClose[i]);
        }

        function close () {
            api.closeFrame({
                name: 'mydata'
            });
        }

    }
        
</script>
</html>
