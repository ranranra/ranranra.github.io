<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>我的充值</title>
    <link rel="stylesheet" type="text/css" href="./../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="./../../frozenui-1.3.0/css/frozen.css"/>
    <link rel="stylesheet" type="text/css" href="./../../css/style.css"/>
    <link rel="stylesheet" type="text/css" href="./../../css/font-awesome.min.css">
    <style type="text/css">
    
    </style>
</head>
<body>
    <header class="ui-border-b">
         <span class="ui-icon-return"></span>
         <h1>充值余额</h1>
    </header>
    <section class="wyt-block">
        <div class="ui-border-b wyt-title">
            <h5>正在评价</h5>
        </div>
        <div class="ui-form-item ui-border-b">
            <label>充值金额</label>
            <input type="text" placeholder="输入提现金额">
            <a href="javascript:;" class="ui-icon-close">
            </a>
        </div>
        <div class="ui-btn-wrap">
            <button id="next" class="ui-btn-lg ui-btn-primary">下一步</button>
        </div>
    </section>
</body>
    <script type="text/javascript" src="./../../script/api.js"></script>
    <script type="text/javascript" src="./../../frozenui-1.3.0/lib/zepto.min.js"></script>
    <script type="text/javascript" src="./../../script/comment.js"></script>
    <script type="text/javascript">
        apiready = function(){
            var oNext = $api.byId('next');
            var oReturn = $api.dom('.ui-icon-return');
            $api.addEvt(oReturn, 'click', function () {
                close();
            });
            
            $api.addEvt(oNext, 'click', function () {
                api.openWin({
                    name: 'paychoose',
                    url: './../payment/paychoose.html',
                    bounces: false,
                    pageParam: {key : 'value'}
                });
            });
            
            function close () {
                api.closeWin({
                    name: 'myrecharge'
                });
            }

        }
    </script>
</html>