    <script type="text/javascript">
        apiready = function(){
            var oReturn = $api.dom('.ui-icon-return');
            var oControl = $api.domAll('.control');
            var oEvaluate = $api.domAll('.wyt-evalue');
            $api.addEvt(oReturn, 'click', function () {
                close();
            });

            for (var i=0; i<oControl.length; i++) {
                oControl[i].index = i;
                change(oControl[i],oControl[i].index);

            }

            function change(obj,index) {
                var oChange = $api.domAll(obj,'a');
                $api.addEvt(oChange[0], 'click', function () {
                    api.openWin({
                        name: 'evalutebill',
                        url: '../waybill/evaluatebill.html',
                        bounces: false,
                    });
                });

                $api.addEvt(oChange[1], 'click', function () {
                    alert(index);
                    $api.remove(oEvaluate[index]);
                });
            }

            function close () {
                api.closeFrame({
                    name: 'myevaluate'
                });
            }

        }
            
