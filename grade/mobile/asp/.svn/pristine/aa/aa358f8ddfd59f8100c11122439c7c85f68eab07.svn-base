<script type="text/javascript">
    apiready = function(){
        var oDetail = $api.domAll('.ui-icon-unfold');
        var oInputClose = $api.domAll('.ui-icon-close');
        var oReturn = $api.dom('.ui-icon-return');
        var oP = $api.domAll('.info');
        $api.addEvt(oReturn, 'click', function () {
            close();
        });
        for (var i=0;i<oDetail.length;i++) {
            oDetail[i].index = i;
            $api.addEvt(oDetail[i], 'click', function () {
                $api.toggleCls(oP[this.index], 'hide');
            });
        }
        $api.addEvt(oReturn, 'click', function () {
            close();
        });

        for(var i=0; i<oInputClose.length; i++) {
            resetInput(oInputClose[i]);
        }

        function close () {
            api.closeFrame({
                name: 'mynotice'
            });
        }

    }
