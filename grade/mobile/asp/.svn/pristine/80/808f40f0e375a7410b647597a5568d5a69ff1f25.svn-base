<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>运单评价</title>
    <link rel="stylesheet" type="text/css" href="./../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="./../../frozenui-1.3.0/css/frozen.css"/>
    <link rel="stylesheet" type="text/css" href="./../../css/style.css"/>
    <link rel="stylesheet" type="text/css" href="./../../css/font-awesome.min.css">
    <style type="text/css">
    .ui-list-link .ui-list-info {
        padding-right: 10px;
    }
    .ui-list-info .ui-txt-info {
        font-size: 14px;
        color: #777;
    }
    .ui-list-info .icon-download-alt {
        margin-right: 5px;
        line-height: 22px;
    }
    .ui-list-info p {
        color: #000;
    }
    .ui-list ul {
        display: inline-block;
    }
    .ui-list .list-name {
        text-align: right;
        color: #777;
    }
    .ui-list li{
        margin-left: 0;
        padding-left: 0;
    }
    .wyt-msg {
        padding-left: 10px;
        background: #f4f4f4;
    }
    .wyt-det {
        padding-left: 10px;
    }
    .wyt-det span {
        text-align: right;
        color: #777;
        margin-right: 5px;
    }
    .wyt-det em {
        color: #000;
    }
    .list-evaluate .ui-list-info {
        width: 80px;
        display: inline-block;
        margin-left: 20px;
    }
    .list-evaluate .star {
        float: left;
        margin-top: 5px;
    }
    .list-evaluate .star li{
        float: left;
        height: 16px;
        width: 16px;
        border-radius: 50%;
        background: #EF8201;
        margin-right: 5px;
    }
    .list-evaluate textarea {
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    #evaluate-detail {
        margin-left: 20px;
        margin-right: 30px;
    }
    </style>
</head>
<body>
    <header class="ui-border-b">
         <span class="ui-icon-return"></span>
         <h1>运单评价</h1>
    </header>
    <section class="wyt-block">
        <div class="ui-border-b wyt-title">
            <h5>正在评价</h5>
        </div>
        <ul class="ui-list ui-list-link ui-border-tb ">
            <li class="ui-border-t">
                <div class="ui-list-info wyt-msg">
                    <h4>运单号:<span>15869854298</span></h4>
                    <p class="ui-txt-info">哈尔滨宏达物流</p>
                    <p><span class="icon-download-alt"></span>等待揽收</p>
                </div>
                <div class="ui-list-info wyt-det">
                    <ul class="list-name">
                        <li>货物:</li>
                        <li>代收款:</li>
                        <li>运费:</li>
                    </ul>
                    <ul class="list-detail">
                        <li>手机</li>
                        <li>3200.00</li>
                        <li>等待揽收</li>
                    </ul>
                </div>
            </li>
        </ul>
        <div class="ui-border-b wyt-title">
            <h5>输入评价信息</h5>
        </div>
        <ul class="ui-list ui-list-text ui-border-tb list-evaluate">
            <li class="ui-border-t">
                <div class="ui-list-info">正在评价</div>
                <div>哈尔滨宏达物流</div>
            </li>
            <li class="ui-border-t">
                <div class="ui-list-info">评分</div>
                <div>
                    <ul class="star">
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
            </li>
            <li class="ui-border-t">
                <div id="evaluate-detail">评价内容</div>
                <textarea cols="18" rows="3"></textarea>
            </li>
        </ul>
        <div class="ui-btn-wrap">
            <button id="upeval" class="ui-btn-lg ui-btn-primary">提交评价</button>
        </div>
    </section>

</body>
<script type="text/javascript" src="./../../script/api.js"></script>
<script type="text/javascript" src="./../../frozenui-1.3.0/lib/zepto.min.js"></script>
<script type="text/javascript" src="./../../script/comment.js"></script>
<script type="text/javascript">
apiready = function(){
    var oReturn = $api.dom('.ui-icon-return');
    var oUpeval = $api.byId('upeval');
    $api.addEvt(oReturn, 'click', function () {
        close();
    });

    $api.addEvt(oUpeval, 'click', function () {
        close();
    });

    function close () {
        api.closeWin({
            name: 'evalutebill'
        });
    }

}
</script>
</html>
