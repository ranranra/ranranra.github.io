<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>修改密码</title>
    <link rel="stylesheet" type="text/css" href="./../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="./../../css/style.css"/>
    <link rel="stylesheet" type="text/css" href="./../../frozenui-1.3.0/css/frozen.css"/>
    <style>
        .ui-icon-return {
            position: absolute;
            left: 10px;
            bottom: 3px;
            color: #fff;
        }
        .top {
            padding: 20px 0;
        }
        .top .ui-btn-wrap {
            margin-top: 10px;
        }
        .ui-form-item {
            padding-left: 15px;
        }

    </style>
</head>
<body>
    <header class="ui-border-b">
        <span class="ui-icon-return"></span>
        <h1>修改密码</h1>
    </header>
    <section>
        <div class="wyt-block">
            <div class="ui-border-b wyt-title">
                <h5>修改登录密码</h5>
            </div>
            <form>
                <div class="ui-form-item ui-border-b">
                    <label>原密码</label>
                    <input type="text" placeholder="原密码">
                    <a href="javascript:;" class="ui-icon-close">
                    </a>
                </div>
                <div class="ui-form-item ui-border-b">
                    <label>新密码</label>
                    <input type="text" placeholder="新密码">
                    <a href="javascript:;" class="ui-icon-close">
                    </a>
                </div>
                <div class="ui-form-item ui-border-b">
                    <label>确认密码</label>
                    <input type="tel" placeholder="确认密码">
                    <a href="javascript:;" class="ui-icon-close">
                    </a>
                </div>
            </form>
        </div>

        <div class="ui-btn-wrap">
            <button id="change" class="ui-btn-lg ui-btn-primary">确认修改</button>
        </div>
    </section>
</body>
<script type="text/javascript" src="./../../script/api.js"></script>
<script type="text/javascript" src="./../../frozenui-1.3.0/lib/zepto.min.js"></script>
<script type="text/javascript" src="./../../script/comment.js"></script>
<script>
    apiready = function(){
        var oChange = $api.byId('change');
        var oInputClose = $api.domAll('.ui-icon-close');
        var oReturn = $api.dom('.ui-icon-return');
        $api.addEvt(oReturn, 'click', function () {
            close();
        });
        $api.addEvt(oChange, 'click', function () {
            close();
        });

        for(var i=0; i<oInputClose.length; i++) {
            resetInput(oInputClose[i]);
        }

        function close () {
            api.closeFrame({
                name: 'mychange'
            });
        }

    }
        
</script>
</html>
