<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>我的</title>
    <link rel="stylesheet" type="text/css" href="../frozenui-1.3.0/css/frozen.css"/>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
    	.top { 
    		padding-top: 50px; 
    		width: 100%; 
    		background: #18b4ed;
    	}

        .top p {
			margin: 5px 0;
			color: #FEF7E4;
        }

        .top .ui-txt-info {
        	font-size: 12px;
        }

        .money {
        	position: relative;
        	margin-bottom: 10px;
        	line-height: 36px;
        }

        .money span {
        	font-size: 24px;
        }

        .money .ui-btn-s {
        	margin-top: 5px;
        	color: #EF8201;
        }
        .mine:active {
            background-color:#1ca7da;
            color: #fff;
        }

        .btn .ui-btn-wrap{
			display: none;
        }

		.btn .nologin {
			display: block;
		}

		.btn .logined {
			display: block;
		}
    </style>
</head>
<body>
	<section id="main" class="ui-container">
		<div class="ui-contaner ui-center top">
			<div class="ui-flex ui-flex-pack-center">
				<div class="ui-avatar-one"><span ></span></div>
			</div>
			<p id="username" class="ui-txt-default">明天的太阳</p>
			<p class="ui-txt-info">我的余额</p>
			<div class="ui-flex ui-flex-pack-center money">
				<p class="ui-txt-default">
					<span>806258.35</span>
					<button id="pay-add" class="ui-btn-s">充值</button>
				</p>
			</div>
		</div>
		<div class="wyt-block">
			<ul class="ui-list ui-border-b">
				<li class="ui-border-b wyt-title">
					<p>基本设置</p>
				</li>
				<ul class="ui-list ui-list-link ui-border-b">
				    <li class="ui-border-t mine">
			    		<div class="ui-list-thumb-s">
			    		    <span class="ui-icon-personal icon"></span>
			    		</div>
			    		<div class="ui-list-info">
			    		    <h4 class="ui-nowrap">个人资料</h4>
			    		</div>
				    </li>
				</ul>
				<li class="ui-border-b wyt-title">
					<p>活动通知</p>
				</li>
				<ul class="ui-list ui-list-link ui-border-b">
				    <li class="ui-border-t mine">
			    		<div class="ui-list-thumb-s">
			    		    <span class="ui-icon-comment icon"></span>
			    		</div>
			    		<div class="ui-list-info">
			    		    <h4 class="ui-nowrap">通知公告</h4>
			    		</div>
				    </li>
				</ul>
				<li class="ui-border-b wyt-title">
					<p>其他</p>
				</li>
				<ul class="ui-list ui-list-link ui-border-b">
				    <li class="ui-border-t mine">
			    		<div class="ui-list-thumb-s">
			    		    <span class="ui-icon-wallet icon"></span>
			    		</div>
			    		<div class="ui-list-info">
			    		    <h4 class="ui-nowrap">提现银行卡</h4>
			    		</div>
				    </li>
		    	    <li class="ui-border-t mine">
		        		<div class="ui-list-thumb-s">
		        		    <span class="ui-icon-order icon"></span>
		        		</div>
		        		<div class="ui-list-info">
		        		    <h4 class="ui-nowrap">我的账单</h4>
		        		</div>
		    	    </li>
    	    	    <li class="ui-border-t mine">
    	        		<div class="ui-list-thumb-s">
    	        		    <span class="ui-icon-file icon"></span>
    	        		</div>
    	        		<div class="ui-list-info">
    	        		    <h4 class="ui-nowrap">提现</h4>
    	        		</div>
    	    	    </li>
    	    	    <li class="ui-border-t mine">
    	        		<div class="ui-list-thumb-s">
    	        		    <span class="ui-icon-like icon"></span>
    	        		</div>
    	        		<div class="ui-list-info">
    	        		    <h4 class="ui-nowrap">评价</h4>
    	        		</div>
    	    	    </li>    	    	    
				</ul>
			</ul>
		</div>
		<div class="btn">
			<div class="ui-btn-wrap nologin">
			    <button id="login" class="ui-btn-lg ui-btn-primary">登录</button>
			</div>
			<div class="ui-btn-wrap logined">
			    <button id="change-num" class="ui-btn-lg ui-btn-primary">修改密码</button>
			</div>
			<div class="ui-btn-wrap logined">
			    <button class="ui-btn-lg ui-btn-primary">退出登录</button>
			</div>
		</div>
	</section>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../frozenui-1.3.0/lib/zepto.min.js"></script>
<script type="text/javascript" src="../script/comment.js"></script>
<script type="text/javascript">
	apiready = function(){
	    var oLogin = $api.byId('login');
	    var oIndex = 0;
	    var arr1 = ["login","reg","find","reset"];
	    var arr2 = ["用户登录","用户注册","找回密码","重置密码"];
        var oH4 = $api.domAll('.mine');
        var oPayAdd = $api.byId('pay-add');
        var oChangeNum = $api.byId('change-num'); 

	    $api.addEvt(oLogin, 'click', function () {
	    	var name = arr1[0];
	    	var title = arr2[0];
	    	indexOpenCommon(name,title);
	    });

        //打开充值
        $api.addEvt(oPayAdd, 'click', function () {
            api.openWin({
                name: 'myrecharge',
                url: './mine/myrecharge.html',
                bounces: false,
                pageParam: {key : 'value'}
            });
        });

        //打开个人资料
        $api.addEvt(oH4[0], 'click', function () {
            api.openFrame({
                name: 'mydata', 
                url: './mine/mydata.html',
                bounces: false,
                animation: 'movein',
                rect: {
                    x: 0,
                    y: 0,
                    w: 'auto',
                    h: 'auto',
                    marginBottom: 56 
                }
            });
        });

        //打开通知公告
        $api.addEvt(oH4[1], 'click', function () {
            api.openFrame({
                name: 'mynotice', 
                url: './mine/mynotice.html',
                bounces: false,
                animation: 'movein',
                rect: {
                    x: 0,
                    y: 0,
                    w: 'auto',
                    h: 'auto',
                    marginBottom: 56 
                }
            });
        });

        //打开提现银行卡
        $api.addEvt(oH4[2], 'click', function () {
            api.openFrame({
                name: 'mycard', 
                url: './mine/mycard.html',
                animation: 'movein',
                bounces: false,
                rect: {
                    x: 0,
                    y: 0,
                    w: 'auto',
                    h: 'auto',
                    marginBottom: 56 
                }
            });
        });

        //打开我的账单
        $api.addEvt(oH4[3], 'click', function () {
            api.openFrame({
                name: 'mypay', 
                url: './mine/mypay.html',
                animation: 'movein',
                bounces: false,
                rect: {
                    x: 0,
                    y: 0,
                    w: 'auto',
                    h: 'auto',
                    marginBottom: 56 
                }
            });
        });
 
        //打开提现
        $api.addEvt(oH4[4], 'click', function () {
            api.openFrame({
                name: 'mydraw', 
                url: './mine/mydraw.html',
                animation: 'movein',
                bounces: false,
                rect: {
                    x: 0,
                    y: 0,
                    w: 'auto',
                    h: 'auto',
                    marginBottom: 56 
                }
            });
        });

        //打开评价
        $api.addEvt(oH4[5], 'click', function () {
            api.openFrame({
                name: 'myevaluate',
                url: './mine/myevaluate.html',
                bounces: false,
                rect: {
                    x: 0,
                    y: 0,
                    w: 'auto',
                    h: 'auto',
                    marginBottom: 56 
                }
            });
        });

        $api.addEvt(oChangeNum, 'click', function () {
            api.openFrame({
                name: 'mychange',
                url: './mine/mychange.html',
                bounces: false,
                rect: {
                    x: 0,
                    y: 0,
                    w: 'auto',
                    h: 'auto',
                    marginBottom: 56
                }
            });
        });
        

	}


</script>
</html>