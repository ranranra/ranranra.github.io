html,
body {
    font-size: 14px;
    height: 100%;
    font-family: "微软雅黑";
    background: #f4f4f4;
}

.hover {
    opacity: .8;
}

.flex-wrap {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.flex-con {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}

.flex-vertical {
    -webkit-box-orient: vertical;
    -webkit-flex-flow: column;
    flex-flow: column;
}

.border-t,
.border-b {
    position: relative;
}

.border-t:before,
.border-b:after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    background: #ddd;
    right: 0;
    height: 1px;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
}

.border-b:after {
    top: auto;
    bottom: 0;
}

#wrap {
    height: 100%;
}

.wyt-desc {
    padding: 10px;
    font-size: 16px;
    text-align: center;
}

.wyt-notice {
    border-radius: 5px;
    border: 1px solid #eee;
    border-top: 5px solid #18b4ed;
    margin: 10px 0;
    padding: 10px 0;
    background: #fff;
}

.wyt-notice time {
    font-size: 12px;
    margin-left: 10px;
}

.wyt-notice p {
    font-size: 12px;
    padding: 0 10px;
}

.wyt-title {
    position: relative;
}

.wyt-title h4 {
    font-size: 14px;
    margin: 0 10px;
    margin-bottom: 0;
}

.wyt-block {
    position: relative;
}

.wyt-block .icon{
    font-size: 28px;
    line-height: 28px;
    color: #EF8201;
}

.wyt-block .wyt-title {
    padding-top: 10px;
    padding-bottom: 2px;
    background: #e6e6e6;
    font-size: 14px;
    color: #777;
}

.wyt-block .wyt-title h5 {
    margin-left: 10px;
}

header{ 
    height: 50px; 
    line-height: 50px; 
    text-align: center; 
    color: #fff; 
    position: relative;
    font-size: 18px;  
    background-color: #18b4ed;
}

header .ui-icon-return {
    position: absolute;
    left: 10px;
    bottom: 3px;
    color: #fff;
}
.ui-header .ui-icon-close-page {
    position: absolute;
    right: 6px;
    top: 0;
    font-size: 1.7em;
}


#close {
    position: absolute;
    right: 4px;
    bottom: 0;
    line-height: 50px;
    color: #fff;
}

.wyt-info {
    font-size: 12px;
    color: #777;
}
